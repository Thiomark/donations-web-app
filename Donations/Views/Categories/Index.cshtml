@model IEnumerable<Donations.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="max-w-[1600px] mx-auto py-6">
    <div class="flex items-center justify-between p-4 bg-gray-100 mb-6">
        <h1 class="text-2xl font-bold capitalize">Categories of goods</h1>
        <p><a class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-gray-900" asp-action="Create">Create New</a></p>
    </div>
    <h4 class="font-bold text-lg mb-2">Name</h4>
    <ul class="divide-y border-b border-t">
        @foreach (var item in Model) {
            <li class="flex item-center py-2 justify-between">
                <span>
                    @Html.DisplayFor(modelItem => item.Name)
                </span>
                <span>
                    @* <a asp-action="Edit" class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-gray-900" asp-route-id="@item.Id">Edit</a> *@
                    <a asp-action="Delete" class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-red-500" asp-route-id="@item.Id">Delete</a>
                </span>
            </li>
        }
    </ul>
</div>
