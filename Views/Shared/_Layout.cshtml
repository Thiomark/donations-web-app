<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Donations</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="bg-orange-500">
        <partial name="_LoginPartial" />
    </div>
    <header class="bg-light">
        <nav class="navbar container navbar-expand-lg navbar-light">
            <ul class="navbar-nav flex-grow-1">
                @if(User.Identity.IsAuthenticated) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Goods Catergories</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="MoneyDonations" asp-action="Index">Monetary Donations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="GoodsDonations" asp-action="Index">Goods Donations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Disasters" asp-action="Index">Disasters</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="AllocateMoneys" asp-action="Index">Allocated Money</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="AllocateGoods" asp-action="Index">Allocated Goods</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container min-h-screen">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="flex justify-center px-4 text-gray-800 bg-white">
        <div class="container py-6">
            <h1 class="text-lg font-bold text-center lg:text-2xl">
                Get updates when <br> donations are made.
            </h1>

            <div class="flex justify-center mt-6">
                <div class="bg-white border rounded-md focus-within:ring dark:bg-gray-900 dark:border-gray-700 focus-within:border-blue-400 focus-within:ring-blue-300 focus-within:ring-opacity-40 dark:focus-within:border-blue-300">
                    <div class="flex flex-wrap justify-between md:flex-row">
                        <input type="email" class="p-2 m-1 text-sm text-gray-700 bg-transparent appearance-none focus:outline-none focus:placeholder-transparent" placeholder="Enter your email" aria-label="Enter your email">
                        <button class="w-full px-3 py-2 m-1 text-sm font-medium tracking-wider text-white uppercase transition-colors duration-300 transform bg-gray-800 rounded-md dark:hover:bg-gray-600 dark:bg-gray-800 lg:w-auto hover:bg-gray-700">subscribe</button>
                    </div>
                </div>
            </div>

            <hr class="h-px mt-6 bg-gray-100 border-none">

            <div class="flex flex-col items-center justify-between mt-6 md:flex-row">
                <div>
                    <a href="#" class="text-xl font-bold text-gray-800 transition-colors duration-300 hover:text-gray-700">DAF</a>
                </div>

                <div class="flex md:m-0">
                    <div class="-mx-4">
                        <a class="px-2 text-sm font-medium text-black" asp-area="" asp-controller="MoneyDonations" asp-action="Index">Monetary Donations</a>
                        <a class="px-2 text-sm font-medium text-black" asp-area="" asp-controller="GoodsDonations" asp-action="Index">Goods Donations</a>
                        <a class="px-2 text-sm font-medium text-black" asp-area="" asp-controller="Disasters" asp-action="Index">Disasters</a>
                        <a class="px-2 text-sm font-medium text-black" asp-area="" asp-controller="AllocateMoneys" asp-action="Index">Allocated Money</a>
                        <a class="px-2 text-sm font-medium text-black" asp-area="" asp-controller="AllocateGoods" asp-action="Index">Allocated Goods</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>