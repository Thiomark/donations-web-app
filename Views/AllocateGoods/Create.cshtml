@model Donation.Models.AllocateGoods

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="AllocateTo">
                <label asp-for="AllocatedTo" class="control-label"></label>
                <span asp-validation-for="Goods" class="text-danger"></span>
            </div>
            <div class="form-group" id="GoodsDonated">
                <label asp-for="Goods" class="control-label"></label>
                <span asp-validation-for="AllocatedTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-gray-900" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
    
            (function () {
                try {
                    var selectAllocateTo = $("<select></select>").attr("id", "AllocateToOption").attr("class", "form-control");
                    var selectGoodsDonated = $("<select></select>").attr("id", "GoodsDonated").attr("class", "form-control");

                    $.ajax({
                        url: "/AllocateGoods/GetGoodsData",
                        datatype: "JSON",
                        type: "Get",
                        success: function (data) {
                            console.log(data)
                            let allocateToOptions = data.disasters.map(o => `<option id="AllocatedTo" value="${o.requiredTypeOfAid}">${o.requiredTypeOfAid}</option>`);
                            let donatedGoodsOptions = data.goodsDonations.map(o => `<option id="AllocatedTo" value="${o.description}">${o.description}</option>`);
                            
                            selectAllocateTo.append(allocateToOptions);
                            selectGoodsDonated.append(donatedGoodsOptions);

                        }
                    });

                    $("#AllocateTo").append(selectAllocateTo);
                    $("#GoodsDonated").append(selectGoodsDonated);
                } catch (e) {
                    console.log(e.message);
                }
            })();
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
