@model IEnumerable<Donation.Models.Category>

@{
    ViewData["Title"] = "Index";
}


<div class="max-w-[1600px] mx-auto py-4">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold">Categories</h1>
        @if(User.Identity.IsAuthenticated) { 
            <p class="mt-2"><a class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-gray-900" asp-action="Create">Create New</a></p>
        }
    </div>
    
    <table class="table mt-8">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if(User.Identity.IsAuthenticated) { 
                            <a asp-action="Delete" class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-gray-900" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
