@model Donation.Models.MoneyDonation

@{
    ViewData["Title"] = "Delete";
}

<div class="max-w-[1600px] mx-auto py-4">
    <h3>Are you sure you want to delete this donation?</h3>
    <br>
    <hr />
    <br>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Donor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Donor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Used)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Used)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-red-500" /> |
            <a asp-action="Index" class="text-gray-200 hover:text-white hover:no-underline text-sm px-6 py-2 rounded bg-gray-900">Back to List</a>
        </form>
    </div>
</div>
